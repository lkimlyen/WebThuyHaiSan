@model  webanhnguyen.Models.Customer
@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content" style="min-height: 530px;">
    <h3>Thông tin khách hàng</h3>

    <div class="block" style="margin-top:10px">
        <div class="block-content">
            <form method="post" name="frmForm" enctype="multipart/form-data" class="form-horizontal">
                <input type="hidden" name="id" value="@Model.id" />

                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Tên khách hàng
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="name" class="form-control" value="@Model.name" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Ngày sinh
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="birthday" class="form-control" value="@Model.birthday" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Giới tính
                    </label>
                    <div class="col-sm-6">
                        @if (@Model.sex.HasValue && @Model.sex.Value)
                        {
                            <input type="text" name="birthday" class="form-control" value="Nam" readonly/>
                        }
                        else
                        {
                            <input type="text" name="birthday" class="form-control" value="Nữ" readonly/>
                        }

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        ID Card
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="idcard" class="form-control" value="@Model.idcard" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Email
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="email" class="form-control" value="@Model.email" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Địa chỉ
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="address" class="form-control" value="@Model.address" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Số điện thoại
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="phone" class="form-control" value="@Model.moblie" readonly/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Ngày gia nhập
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="date_added" class="form-control" value="@Model.date_added" readonly/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4 btn-gr">
                        <button onclick="goBack()" type="button" name="goback" class="btn btn-default">Quay lại</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>