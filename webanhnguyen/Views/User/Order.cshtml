@model IEnumerable<webanhnguyen.Models.Order>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tygh-content clearfix">
    <div class="container-fluid  content-grid">
        <div class="row-fluid ">
            <div class="span16 breadcrumbs-grid">
                <div id="breadcrumbs_73">

                    <div class="ty-breadcrumbs clearfix">
                        <a href="http://thuyhaisancamau.com/" class="ty-breadcrumbs__a">Trang chủ</a><span class="ty-breadcrumbs__slash">/</span><span class="ty-breadcrumbs__current">Đơn hàng</span>
                    </div>

                    <!--breadcrumbs_73-->
                </div>
            </div>
        </div><div class="row-fluid ">
            <div class="span16 main-content-grid">
                <div class="ty-mainbox-container clearfix">
                    <h1 class="ty-mainbox-title">

                        Đơn hàng


                    </h1>
                    <div class="ty-mainbox-body">

                        <div class="ty-section ty-search-form" id="ds_1705345364">
                            <div class="ty-section__title open cm-combination cm-save-state cm-ss-reverse" id="sw_s_02bd5be3772a4009083c4a8a8dd72eca">
                                <span>Tùy chọn tìm kiếm</span>
                                <span class="ty-section__switch ty-section_switch_on">Mở<i class="ty-section__arrow ty-icon-down-open"></i></span>
                                <span class="ty-section__switch ty-section_switch_off">Ẩn<i class="ty-section__arrow ty-icon-up-open"></i></span>
                            </div>
                            <div id="s_02bd5be3772a4009083c4a8a8dd72eca" class="ty-section__body ">
                                <form action="/Home/Index" name="orders_search_form" method="get">

                                    <div class="ty-control-group">
                                        <label class="ty-control-group__title">Tổng cộng&nbsp;(đ)</label>
                                        <input type="text" name="total_from" value="" size="3" class="ty-input-text-short" />&nbsp;&#8211;&nbsp;<input type="text" name="total_to" value="" size="3" class="ty-input-text-short" />
                                    </div>

                                    <div class="ty-control-group">
                                        <label class="ty-control-group__title">Trang thái đơn hàng</label>

                                        <div class="ty-status-info">
                                            <label><input type="checkbox" name="status[]" value="A" columns="4" />Đã Xác Nhận</label>
                                            <label><input type="checkbox" name="status[]" value="B" columns="4" />Backordered</label>
                                            <label><input type="checkbox" name="status[]" value="C" columns="4" />Hoàn tất</label>
                                            <label><input type="checkbox" name="status[]" value="D" columns="4" />Từ chối</label>
                                            <label><input type="checkbox" name="status[]" value="E" columns="4" />Đang giao hàng</label>
                                            <label><input type="checkbox" name="status[]" value="F" columns="4" />Thanh toán thất bại</label>
                                            <label><input type="checkbox" name="status[]" value="G" columns="4" />Nhận Tại Văn Phòng</label>
                                            <label><input type="checkbox" name="status[]" value="H" columns="4" />Không liên lạc được</label>
                                            <label><input type="checkbox" name="status[]" value="I" columns="4" />Hủy</label>
                                            <label><input type="checkbox" name="status[]" value="J" columns="4" />Trả hàng</label>
                                            <label><input type="checkbox" name="status[]" value="K" columns="4" />Chưa hoàn tất</label>
                                            <label><input type="checkbox" name="status[]" value="L" columns="4" />Complaint</label>
                                            <label><input type="checkbox" name="status[]" value="M" columns="4" />Gọi lại sau</label>
                                            <label><input type="checkbox" name="status[]" value="O" columns="4" />Đang xử lý</label>
                                            <label><input type="checkbox" name="status[]" value="P" columns="4" />Đã thanh toán</label>
                                            <label><input type="checkbox" name="status[]" value="Q" columns="4" />Đã Giao</label>
                                            <label><input type="checkbox" name="status[]" value="Y" columns="4" />Chưa gọi</label>
                                        </div>
                                    </div>

                                    <div class="ty-period">
                                        <div class="ty-control-group ty-period__wrapper">
                                            <label class="ty-control-group__title">Thời gian</label>
                                            <select class="ty-period__select" name="period" id="period_selects">
                                                <option value="A" selected="selected">All</option>
                                                <optgroup label="=============">
                                                    <option value="D">This day</option>
                                                    <option value="W">This week</option>
                                                    <option value="M">This month</option>
                                                    <option value="Y">This year</option>
                                                </optgroup>
                                                <optgroup label="=============">
                                                    <option value="LD">Yesterday</option>
                                                    <option value="LW">Previous week</option>
                                                    <option value="LM">Previous month</option>
                                                    <option value="LY">Previous year</option>
                                                </optgroup>
                                                <optgroup label="=============">
                                                    <option value="HH">Last 24 hours</option>
                                                    <option value="HW">Last 7 days</option>
                                                    <option value="HM">Last 30 days</option>
                                                </optgroup>
                                                <optgroup label="=============">
                                                    <option value="C">Custom</option>
                                                </optgroup>
                                            </select>
                                        </div>

                                        <div class="ty-control-group ty-period__select-date calendar">
                                            <label class="ty-control-group__title">Chọn ngày</label>

                                            <div class="ty-calendar__block">
                                                <input type="text" id="f_date" name="time_from" class="ty-calendar__input cm-calendar" value="" onchange=&quot;Tygh.$(&#039;#period_selects&#039;).val(&#039;C&#039;);&quot; size="10" />
                                                <a class="cm-external-focus ty-calendar__link" data-ca-external-focus-id="f_date">
                                                    <i class="ty-icon-calendar ty-calendar__button" title="Calendar"></i>
                                                </a>
                                            </div>

                                            <script type="text/javascript">
(function(_, $) {
    $(document).ready(function() {
        $('#f_date').datepicker(
        {
            changeMonth: true,
            duration: 'fast',
            changeYear: true,
            numberOfMonths: 1,
            selectOtherMonths: true,
            showOtherMonths: true,
            firstDay: 1,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            monthNamesShort: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            yearRange: '2004:2017',
            dateFormat: 'dd/mm/yy'
        });
    });
}(Tygh, Tygh.$));
                                            </script>
                                            <span class="ty-period__dash">&#8211;</span>

                                            <div class="ty-calendar__block">
                                                <input type="text" id="t_date" name="time_to" class="ty-calendar__input cm-calendar" value="" onchange=&quot;Tygh.$(&#039;#period_selects&#039;).val(&#039;C&#039;);&quot; size="10" />
                                                <a class="cm-external-focus ty-calendar__link" data-ca-external-focus-id="t_date">
                                                    <i class="ty-icon-calendar ty-calendar__button" title="Calendar"></i>
                                                </a>
                                            </div>

                                            <script type="text/javascript">
(function(_, $) {
    $(document).ready(function() {
        $('#t_date').datepicker(
        {
            changeMonth: true,
            duration: 'fast',
            changeYear: true,
            numberOfMonths: 1,
            selectOtherMonths: true,
            showOtherMonths: true,
            firstDay: 1,
            dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
            monthNamesShort: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            yearRange: '2004:2017',
            dateFormat: 'dd/mm/yy'
        });
    });
}(Tygh, Tygh.$));
                                            </script>
                                        </div>

                                        <script type="text/javascript" src="~/Scripts/period_selector.js"></script>
                                        <script type="text/javascript">
    Tygh.$(document).ready(function(){
        Tygh.$('#period_selects').cePeriodSelector({
            from: 'f_date',
            to: 't_date'
        });
    });
                                        </script>
                                    </div>

                                    <div class="ty-control-group">
                                        <label class="ty-control-group__title">Mã ĐH</label>
                                        <input type="text" name="order_id" value="" size="10" class="ty-search-form__input" />
                                    </div>

                                    <div class="buttons-container ty-search-form__buttons-container">


                                        <button class="ty-btn__secondary ty-btn" type="submit" name="dispatch[orders.search]">Tìm kiếm</button>


                                    </div>
                                </form>
                            </div>
                        </div>




                        <div class="ty-pagination-container cm-pagination-container" id="pagination_contents">






                            <table class="ty-table ty-orders-search">
                                <thead>
                                    <tr>
                                        <th><a class="cm-ajax" href="http://hasasa.vn/index.php?dispatch=orders.search&amp;sort_by=order_id&amp;sort_order=asc" data-ca-target-id="pagination_contents">ID</a></th>
                                        <th><a class="cm-ajax" href="http://hasasa.vn/index.php?dispatch=orders.search&amp;sort_by=status&amp;sort_order=asc" data-ca-target-id="pagination_contents">Trang thái</a></th>
                                        <th><a class="cm-ajax" href="http://hasasa.vn/index.php?dispatch=orders.search&amp;sort_by=customer&amp;sort_order=asc" data-ca-target-id="pagination_contents">Khách hàng</a></th>
                                        <th><a class="cm-ajax" href="http://hasasa.vn/index.php?dispatch=orders.search&amp;sort_by=date&amp;sort_order=asc" data-ca-target-id="pagination_contents">Ngày</a><i class="ty-icon-up-dir"></i></th>




                                        <th><a class="cm-ajax" href="http://hasasa.vn/index.php?dispatch=orders.search&amp;sort_by=total&amp;sort_order=asc" data-ca-target-id="pagination_contents">Tổng cộng</a></th>
                                    </tr>
                                </thead>
                                @if (@Model.Count() == 0) { }
                                <tr class="ty-table__no-items">
                                    <td colspan="7"><p class="ty-no-items">No orders found</p></td>
                                </tr>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="ty-orders-search__item"><a href="@Url.Action("OrderDetail", "User", new { id = item.id })"><strong>@item.id</strong></a></td>
                                    <td class="ty-orders-search__item">
                                        @item.status
                                    </td>
                                    <td class="ty-orders-search__item">
                                        <ul class="ty-orders-search__user-info">
                                            <li class="ty-orders-search__user-name">@item.tennguoinhan </li>
                                            <li class="ty-orders-search__user-mail"><a href="mailto:@item.gmail">@item.gmail</a></li>
                                        </ul>
                                    </td>
                                    <td class="ty-orders-search__item"><a href="@Url.Action("OrderDetail", "User", new { id = item.id })">@item.thoidiemdathang</a></td>




                                    <td class="ty-orders-search__item"><span>@item.price</span>&nbsp;đ</td>
                                </tr>}
                            </table>


                          




                            <!--pagination_contents-->
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

